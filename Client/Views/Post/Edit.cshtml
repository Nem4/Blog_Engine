@model API.Models.Post




<div class="card  col-10 col-lg-6 mt-5 mx-auto">
    <div class="card-body">
        <h5 class="card-title">Add Post</h5>


        <div class="form-group row">
            <label for="postTitle" class="col-sm-3 col-form-label">Title</label>
            <div class="col-sm-7">
                <input type="text" name="title" class="form-control" id="postTitle" data-id="@Model.Id" placeholder="Post title" value="@Model.Title">
                <div id="postError" class="invalid-feedback">
                    This post already exists
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="dropdownPost" class="col-sm-3 col-form-label">Category</label>
            <div class="col-sm-7">

                <div class="dropdown show">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownCategory" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Post
                    </a>
                    <div class="d-inline justify-content-center text-center" id="createCategoryButton">
                        <a href="/category/create" class="btn btn-outline-primary my-auto"> Add </a>
                    </div>
                    <div id="postDropdownError" class="invalid-feedback">
                        This post already exists
                    </div>
                    <div class="dropdown-menu" id="dropdownCategoryList" data-selectedCategory="@Model.Category.Id" aria-labelledby="dropdownMenuLink">
                    </div>
                </div>

            </div>
        </div>

        <div class="form-group row">
            <label for="postPubDate" class="col-sm-3 col-form-label">Pub Date</label>
            <div class="col-sm-7">
                <input type="date" id="postPubDate" name="trip-start"
                       value="@Model.PublicationDate.ToString("yyyy-MM-dd")">
            </div>
        </div>

        <div class="form-group">
            <label for="postContent">Content</label>
            <textarea class="form-control" id="postContent" rows="3">@Model.Content</textarea>
            <div id="postContentError" class="invalid-feedback">
                The content field cannot be empty!
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button class="btn btn-primary" id="editPostButton">Save</button>
            </div>
        </div>
    </div>
</div>



<script type="module" src="~/js/Post.js"></script>


<style>
    textarea {
        resize: none;
    }
</style>